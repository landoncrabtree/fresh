# Focus windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Move windows
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Stack windows
alt - left : ~/.config/skhd/stack.sh west
alt - down : ~/.config/skhd/stack.sh south
alt - up : ~/.config/skhd/stack.sh north
alt - right : ~/.config/skhd/stack.sh east
alt - 0x29 : yabai -m window --toggle float && yabai -m window --toggle float # ;
alt - 0x21 : yabai -m window --focus stack.prev || yabai -m window --focus stack.last # [
alt - 0x1E : yabai -m window --focus stack.next || yabai -m window --focus stack.first # ]

# Resize
alt - 0x18 : ~/.config/skhd/resize.sh horizontal increase # +
alt - 0x1B : ~/.config/skhd/resize.sh horizontal decrease  # -
shift + alt - 0x18 : ~/.config/skhd/resize.sh vertical increase # +
shift + alt - 0x1B : ~/.config/skhd/resize.sh vertical decrease # -

# Manipulate windows
alt - t : yabai -m window --toggle float; yabai -m window --grid 4:4:1:1:2:2
alt - f : yabai -m window --focus mouse && yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen
alt - q : yabai -m window --close
alt - m : yabai -m window --minimize

# Window manager options
shift + alt - r : yabai -m space --balance
alt - p : ~/.config/skhd/pause.sh

# Layouts
alt - x : yabai -m space --mirror x-axis
alt - y : yabai -m space --mirror y-axis
alt - r : yabai -m space --rotate 90

# Workspaces
alt - 1 : ~/.config/skhd/focus.sh 1
alt - 2 : ~/.config/skhd/focus.sh 2
alt - 3 : ~/.config/skhd/focus.sh 3
alt - 4 : ~/.config/skhd/focus.sh 4
alt - 5 : ~/.config/skhd/focus.sh 5
alt - 6 : ~/.config/skhd/focus.sh 6
alt - 7 : ~/.config/skhd/focus.sh 7
alt - 8 : ~/.config/skhd/focus.sh 8
alt - 9 : ~/.config/skhd/focus.sh 9
alt - 0 : ~/.config/skhd/focus.sh 10

# Move windows across workspaces
shift + alt - 1 : ~/.config/skhd/move.sh 1
shift + alt - 2 : ~/.config/skhd/move.sh 2
shift + alt - 3 : ~/.config/skhd/move.sh 3
shift + alt - 4 : ~/.config/skhd/move.sh 4
shift + alt - 5 : ~/.config/skhd/move.sh 5
shift + alt - 6 : ~/.config/skhd/move.sh 6
shift + alt - 7 : ~/.config/skhd/move.sh 7
shift + alt - 8 : ~/.config/skhd/move.sh 8
shift + alt - 9 : ~/.config/skhd/move.sh 9
shift + alt - 0 : ~/.config/skhd/move.sh 10


