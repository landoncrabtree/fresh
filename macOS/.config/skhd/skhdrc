# moves focus between windows in the current focused display
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# stack windows
ctrl + alt - left : ~/.config/yabai/stack.sh west
ctrl + alt - down : ~/.config/yabai/stack.sh south
ctrl + alt - up : ~/.config/yabai/stack.sh north
ctrl + alt - right : ~/.config/yabai/stack.sh east

rcmd - 1 : (yabai -m space --focus 1) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 2 : (yabai -m space --focus 2) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 3 : (yabai -m space --focus 3) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 4 : (yabai -m space --focus 4) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 5 : (yabai -m space --focus 5) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 6 : (yabai -m space --focus 6) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 7 : (yabai -m space --focus 7) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 8 : (yabai -m space --focus 8) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 9 : (yabai -m space --focus 9) || ( yabai -m space --create && yabai -m space --focus next)
rcmd - 0 : (yabai -m space --focus 10) || ( yabai -m space --create && yabai -m space --focus next)

# move window to space
ralt - 1 : (yabai -m window --space 1 && yabai -m space --focus 1) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 2 : (yabai -m window --space 2 && yabai -m space --focus 2) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 3 : (yabai -m window --space 3 && yabai -m space --focus 3) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 4 : (yabai -m window --space 4 && yabai -m space --focus 4) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 5 : (yabai -m window --space 5 && yabai -m space --focus 5) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 6 : (yabai -m window --space 6 && yabai -m space --focus 6) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 7 : (yabai -m window --space 7 && yabai -m space --focus 7) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 8 : (yabai -m window --space 8 && yabai -m space --focus 8) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 9 : (yabai -m window --space 9 && yabai -m space --focus 9) || (yabai -m window --space next && yabai -m space --focus next)
ralt - 0 : (yabai -m window --space 10 && yabai -m space --focus 10) || (yabai -m window --space next && yabai -m space --focus next)

# delete focused window
alt - q : yabai -m window --close

# toggle window split type
alt - e : yabai -m window --toggle split

# minimize window
alt - m : yabai -m window --minimize

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# toggle desktop offset
alt - a : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window parent zoom
alt - d : yabai -m window --focus mouse && \
          yabai -m window --toggle zoom-parent

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# toggle window fullscreen zoom
alt - f : yabai -m window --focus mouse && \
          yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# increase gap in focused space
# alt - g : yabai -m space --gap rel:10

# decrease gap in focused space
# shift + alt - g : yabai -m space --gap rel:-10

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
# shift + cmd - h : yabai -m window --warp west
# shift + cmd - j : yabai -m window --warp south
# shift + cmd - k : yabai -m window --warp north
# shift + cmd - l : yabai -m window --warp east

# change layout of desktop
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float

# increase window size
ctrl + alt - h : yabai -m window --resize left:-40:0
ctrl + alt - j : yabai -m window --resize bottom:0:40
ctrl + alt - k : yabai -m window --resize top:0:-40
ctrl + alt - l : yabai -m window --resize right:40:0

# decrease window size
ctrl + alt + cmd - h : yabai -m window --resize left:40:0
ctrl + alt + cmd - j : yabai -m window --resize bottom:0:-40
ctrl + alt + cmd - k : yabai -m window --resize top:0:40
ctrl + alt + cmd - l : yabai -m window --resize right:-40:0
