# moves focus between windows in the current focused display
alt - h : /usr/local/bin/yabai -m window --focus west
alt - j : /usr/local/bin/yabai -m window --focus south
alt - k : /usr/local/bin/yabai -m window --focus north
alt - l : /usr/local/bin/yabai -m window --focus east

# delete focused window
alt - q : /usr/local/bin/yabai -m window --close

# toggle window split type
alt - e : /usr/local/bin/yabai -m window --toggle split√ü

# minimize window
alt - m : /usr/local/bin/yabai -m window --minimize

# rotate tree
alt - r : /usr/local/bin/yabai -m space --rotate 90

# mirror tree y-axis
alt - y : /usr/local/bin/yabai -m space --mirror y-axis

# toggle desktop offset
alt - a : /usr/local/bin/yabai -m space --toggle padding; /usr/local/bin/yabai -m space --toggle gap

# toggle window parent zoom
alt - d : /usr/local/bin/yabai -m window --focus mouse && \
          /usr/local/bin/yabai -m window --toggle zoom-parent

# float / unfloat window and center on screen
alt - t : /usr/local/bin/yabai -m window --toggle float;\
          /usr/local/bin/yabai -m window --grid 4:4:1:1:2:2

# toggle window fullscreen zoom
alt - f : /usr/local/bin/yabai -m window --focus mouse && \
          /usr/local/bin/yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
shift + alt - f : /usr/local/bin/yabai -m window --toggle native-fullscreen

# increase gap in focused space
# alt - g : /usr/local/bin/yabai -m space --gap rel:10

# decrease gap in focused space
# shift + alt - g : /usr/local/bin/yabai -m space --gap rel:-10

# balance size of windows
shift + alt - 0 : /usr/local/bin/yabai -m space --balance

# swap window
shift + alt - h : /usr/local/bin/yabai -m window --swap west
shift + alt - j : /usr/local/bin/yabai -m window --swap south
shift + alt - k : /usr/local/bin/yabai -m window --swap north
shift + alt - l : /usr/local/bin/yabai -m window --swap east

# move window
shift + cmd - h : /usr/local/bin/yabai -m window --warp west
shift + cmd - j : /usr/local/bin/yabai -m window --warp south
shift + cmd - k : /usr/local/bin/yabai -m window --warp north
shift + cmd - l : /usr/local/bin/yabai -m window --warp east

# change layout of desktop
ctrl + alt - a : /usr/local/bin/yabai -m space --layout bsp
ctrl + alt - d : /usr/local/bin/yabai -m space --layout float

# increase window size
ctrl + alt - h : /usr/local/bin/yabai -m window --resize left:-40:0
ctrl + alt - j : /usr/local/bin/yabai -m window --resize bottom:0:40
ctrl + alt - k : /usr/local/bin/yabai -m window --resize top:0:-40
ctrl + alt - l : /usr/local/bin/yabai -m window --resize right:40:0

# decrease window size
ctrl + alt + cmd - h : /usr/local/bin/yabai -m window --resize left:40:0
ctrl + alt + cmd - j : /usr/local/bin/yabai -m window --resize bottom:0:-40
ctrl + alt + cmd - k : /usr/local/bin/yabai -m window --resize top:0:40
ctrl + alt + cmd - l : /usr/local/bin/yabai -m window --resize right:-40:0
